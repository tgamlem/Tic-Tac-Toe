{
	"name": "Tic-Tac-Toe",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "https://github.com/tgamlemTic-Tac-Toe",
	"author": "Tyler Gamlem",
	"license": "MIT",
	"private": false,
	"scripts": {
		"dev-client": "webpack serve",
		"dev-server": "nodemon --exec babel-node --config nodemon.json --inspect server/server.js",
		"prebuild": "yarn lint-check",
		"build": "rm -rf dist && webpack --mode production --config webpack.prod.config.js && webpack --mode production --config webpack.server.config.js",
		"test": "mocha ./tests/test.js --exit",
		"start": "NODE_ENV=production node ./dist/server.*.wp.js",
		"prettier": "prettier --config ./.prettierrc --ignore-path  ./.prettierignore --write \"**/*.js*\" \"**/*.scss\" \"*.json\" \"*.md\"",
		"prettier-check": "prettier --list-different \"{*.md,./{src}/**/*.js?(x)}\"",
		"lint-check": "yarn prettier-check && yarn eslint && yarn stylelint-check",
		"lint": "yarn prettier; yarn eslint; yarn stylelint",
		"eslint": "eslint '*/**/*.{js,jsx}'",
		"stylelint": "stylelint --config ./.stylelintrc --fix \"**/*.scss\" --color --cache",
		"stylelint-check": "stylelint --config ./.stylelintrc \"**/*.scss\" --color --cache"
	},
	"browsersList": [
		"last 2 versions",
		"not dead",
		"> 0.2%"
	],
	"devDependencies": {
		"@babel/core": "^7.14.8",
		"@babel/node": "^7.16.0",
		"@babel/plugin-transform-runtime": "^7.14.5",
		"@babel/preset-env": "^7.14.8",
		"@babel/preset-react": "^7.14.5",
		"@webpack-cli/serve": "^1.5.1",
		"babel-loader": "^8.2.2",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"compression-webpack-plugin": "^9.0.0",
		"css-loader": "^6.2.0",
		"css-minimizer-webpack-plugin": "^3.0.2",
		"eslint": "^8.1.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.24.0",
		"file-loader": "^6.0.0",
		"html-webpack-plugin": "^5.3.2",
		"mini-css-extract-plugin": "^2.1.0",
		"nodemon": "^2.0.15",
		"path": "^0.12.7",
		"prettier": "^2.3.2",
		"sass": "^1.35.2",
		"sass-loader": "^12.1.0",
		"style-loader": "^3.2.1",
		"stylelint": "^14.0.1",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-prettier": "^1.2.0",
		"webpack": "^5.50.0",
		"webpack-cli": "^4.7.2",
		"webpack-dev-server": "^4.4.0",
		"webpack-node-externals": "^3.0.0"
	},
	"dependencies": {
		"axios": "^0.24.0",
		"dotenv-webpack": "^7.0.3",
		"express": "^4.17.1",
		"fs": "^0.0.1-security",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"react-router-dom": "^5.2.0",
		"uuid": "^8.3.2"
	}
}
